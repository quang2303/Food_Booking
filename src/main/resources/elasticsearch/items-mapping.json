{
  "settings": {
    "analysis": {
    "filter": {
      "autocomplete_filter": {
        "type": "edge_ngram",
        "min_gram": 1,
        "max_gram": 20
      }
    },
    "analyzer": {
      "autocomplete_analyzer": {
        "type": "custom",
        "tokenizer": "standard", 
        "filter": [
          "lowercase",
          "asciifolding",
          "autocomplete_filter"
        ]
      },
      "autocomplete_search_analyzer": {
        "type": "custom",
        "tokenizer": "standard",  
        "filter": [
          "lowercase",
          "asciifolding"
        ]
      }
    }
  }
  },
  "mappings": {
    "properties": {
      "name": {
        "type": "text",
        "analyzer": "autocomplete_analyzer",       
        "search_analyzer": "autocomplete_search_analyzer",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      },
      "type": {
        "type": "text",
        "fields": {
          "keyword": {
            "type": "keyword"
          }
        }
      }
    }
  }
}